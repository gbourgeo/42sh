---
Language: Cpp # Used for C, C++.
BasedOnStyle: GNU
UseTab: Never
IndentWidth: 4
ColumnLimit: 0
AlignAfterOpenBracket: Align
AlignArrayOfStructures: Left
AlignConsecutiveAssignments: AcrossComments
AlignConsecutiveDeclarations: AcrossEmptyLinesAndComments
AlignConsecutiveMacros: AcrossEmptyLinesAndComments
AllowShortCaseExpressionOnASingleLine: true
AlignConsecutiveShortCaseStatements:
  Enabled: true
  AcrossEmptyLines: true
  AcrossComments: true
AlignEscapedNewlines: LeftWithLastLine
AlignOperands: DontAlign #DontAlign, Align, AlignAfterOperator
AlignTrailingComments:
  Kind: Always
  OverEmptyLines: 1
AllowAllArgumentsOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
AllowShortBlocksOnASingleLine: Empty
AllowShortCaseLabelsOnASingleLine: false
AllowShortEnumsOnASingleLine: false
AllowShortFunctionsOnASingleLine: None
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false
AlwaysBreakAfterDefinitionReturnType: None
AlwaysBreakBeforeMultilineStrings: false
AttributeMacros: [__attribute__]
BinPackArguments: false
# BinPackParameters: AlwaysOnePerLine               # Marche pas
BreakBeforeBraces: Custom
BraceWrapping:
  AfterCaseLabel: true
  AfterControlStatement: Always # (if/for/while/switch/..)
  AfterEnum: true
  AfterFunction: true
  AfterStruct: true
  AfterUnion: true
  BeforeElse: true
  BeforeWhile: false
  IndentBraces: false
  SplitEmptyFunction: false
  SplitEmptyRecord: false # (class, struct or union)
BracedInitializerIndentWidth: 4
BreakAdjacentStringLiterals: true
BreakAfterAttributes: Never
BreakAfterReturnType: None
BreakArrays: false
BreakBeforeBinaryOperators: NonAssignment # None, NonAssignment, All
BreakBeforeTernaryOperators: false
# BreakBinaryOperations: OnePerLine           # Clang-format v20
BreakFunctionDefinitionParameters: false
BreakStringLiterals: true
ContinuationIndentWidth: 4
Cpp11BracedListStyle: false
DerivePointerAlignment: false
IncludeBlocks: Merge
IndentCaseBlocks: false
IndentCaseLabels: true
IndentExternBlock: false # C++
IndentGotoLabels: false
IndentPPDirectives: AfterHash
PPIndentWidth: 1
InsertBraces: true # (if, else, for, do, and while)
InsertNewlineAtEOF: true
InsertTrailingCommas: Wrapped
KeepEmptyLines:
  AtEndOfFile: false
  AtStartOfBlock: true
  AtStartOfFile: false
MaxEmptyLinesToKeep: 1
LineEnding: LF
PenaltyReturnTypeOnItsOwnLine: 10000
PointerAlignment: Right
QualifierAlignment: Left
# QualifierOrder: [static, inline, const, volatile, type]   # Marche pas :'(
# ReflowComments: IndentOnly                                # Marche pas :'(
RemoveBracesLLVM: false
# RemoveEmptyLinesInUnwrappedLines: true                    # Marche pas :'(
RemoveParentheses: MultipleParentheses
RemoveSemicolon: true
SeparateDefinitionBlocks: Always
SortIncludes: CaseSensitive
SpaceAfterCStyleCast: true
SpaceAfterLogicalNot: false
SpaceAroundPointerQualifiers: Before
SpaceBeforeAssignmentOperators: true
SpaceBeforeCaseColon: false
SpaceBeforeCpp11BracedList: true
SpaceBeforeJsonColon: false
SpaceBeforeParens: ControlStatements
SpaceBeforeRangeBasedForLoopColon: true
SpaceBeforeSquareBrackets: false
SpaceInEmptyBlock: false
SpaceInEmptyParentheses: false
SpacesInContainerLiterals: true
SpacesInParens: Never
SpacesInSquareBrackets: false
---
Language: TextProto # Used for Protocol Buffer messages in text format.
---
Language: Proto # Used for Protocol Buffer.
---
Language: Json # Used for Protocol Buffer.
---
